{%- assign ogImage = null -%}
{%- if release -%}
  {%- assign ogImage = release.cover_url -%}
{%- elsif project -%}
  {%- assign ogImage = project.image -%}
{%- elsif content -%}
  {%- assign ogImage = content | extractFirstImage -%}
{%- endif -%}
{%- if ogImage -%}
{{- ogImage | toAbsoluteUrl: site.META.DOMAIN -}}
{%- else -%}
{{- site.META.LOGO | toAbsoluteUrl: site.META.CANONICAL -}}
{%- endif -%}

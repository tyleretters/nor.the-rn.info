<footer class="container mx-auto overflow-hidden bg-stone-50 text-stone-950">
  {% render spectrum %}
  {% render rule %}
  <div class="grid lg:grid-cols-4">
    <ul class="border-b-4 border-[black] px-2 py-2 lg:border-r-4 lg:border-b-0 lg:border-solid ">
      <li>{{ site.META.TITLE }}</li>
      <li>
        2008 &mdash; {{ site.META.YEAR }}
        <a
          href="{{ site.META.CREATIVE_COMMONS }}"
          class="text-blue-700 underline hover:text-blue-900 hover:no-underline"
          >CC BY 4.0</a
        >
      </li>
      <li>{{ site.META.INVOCATION }}</li>
    </ul>
    <ul class="border-b-4 border-solid border-[black] px-2 py-2 lg:col-span-2 lg:border-r-4 lg:border-b-0">
      <li>
        You Are Here:
        {% assign path = site.META.CANONICAL | replace_last: '/', '' | append: page.url | append: path.url %}
        <a href="{{ path }}" class="text-blue-700 underline hover:text-blue-900 hover:no-underline">
          {{ path }}
        </a>
      </li>
      <li>Build Time: {{ site.META.BUILD_TIME }}</li>
      <li>
        Source Code:
        <a
          href="{{ site.META.GITHUB_URL }}/commit/{{ site.META.GIT_HASH }}"
          class="text-blue-700 underline hover:text-blue-900 hover:no-underline"
        >
          {{- site.META.GIT_HASH_SHORT -}}
        </a>
      </li>
      <li>
        Atom Feed:
        <a
          href="{{ site.META.CANONICAL }}{{ site.META.FEED }}"
          class="text-blue-700 underline hover:text-blue-900 hover:no-underline"
        >
          {{- site.META.CANONICAL -}}
          {{- site.META.FEED -}}
        </a>
      </li>
    </ul>
    <a
      href="/"
      class="flex h-full w-full items-center justify-center px-2 py-2 hover:bg-red-500"
    >
      <img
        src="/images/applied-sciences-and-phantasms-working-division.svg"
        alt="Northern Information Logo"
        class="mr-2 h-[90px] w-[90px]"
      >
    </a>
  </div>
  {% render rule %}
  {% render spectrum %}
  {% render rule %}
</footer>

<div class="grid grid-cols-1 gap-5 md:grid-cols-2">
  <div>
    <h3 class="text-xl text-stone-50">Latest Music</h3>
    <hr class="mb-2">
    <ul class="list-none">
      {% for release in collections.discographyPages limit: 3 %}
        <li class="mb-5 flex justify-center">
          {% render releaseList, release: release, isLink: true %}
        </li>
      {% endfor %}
    </ul>
  </div>
  <div>
    <h3 class="text-xl text-stone-50">Latest Posts</h3>
    <hr class="mb-2">
    <ul class="list-none">
      {% assign posts = collections.posts | reverse %}
      {% for post in posts limit: 5 %}
        <li class="mb-2">{% render postLink, post: post %}</li>
      {% endfor %}
    </ul>
  </div>
</div>

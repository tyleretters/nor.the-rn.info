---
layout: base.liquid
---
<div class="content">
  {% render pageTitle, title: title %}
</div>
{% render discography, discographyPages: collections.discographyPages, mode: 'list', site: site %}
{% render pageTitle, title: 'Playlists' %}
<ul class="grid grid-cols-1 xl:grid-cols-3">
  {% for playlist in playlists %}
    <li class="content max-w-none mb-10">
      <h2>{{ playlist.title }}</h2>
      <ol>
        {% for track in playlist.tracks %}
          <li>{{ track }}</li>
        {% endfor %}
      </ol>
    </li>
  {% endfor %}
</ul>

---
layout: base.liquid
---
<div class="content">
  {% render pageTitle, title: title %}
</div>
<ul class="grid list-none grid-cols-1 md:grid-cols-3 xl:grid-cols-5">
  {% for release in collections.mixPages %}
    <li class="mb-10">
      {% render release, release: release %}
    </li>
  {% endfor %}
</ul>
<div class="content">
  {% render pageTitle, title: 'Playlists' %}
</div>
<ul class="grid grid-cols-1 gap-1 xl:grid-cols-3 xl:gap-3">
  {% for playlist in playlists %}
    <li class="content mb-10 max-w-none">
      <h2>{{ playlist.title }}</h2>
      <ol>
        {% for track in playlist.tracks %}
          <li>{{ track }}</li>
        {% endfor %}
      </ol>
    </li>
  {% endfor %}
</ul>
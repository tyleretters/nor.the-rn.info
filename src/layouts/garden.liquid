---
layout: base.liquid
---
<h1 class="text-4xl text-stone-50 text-center py-10">Under Construction</h1>
{% comment %} <div class="grid grid-cols-1 xl:grid-cols-4">
  <div class="post p-y xl:col-span-3 bg-stone-50">
    <h1 class="mb-1 text-4xl">{{ title }}</h1>
    {{ content }}
  </div>
</div>
<ul class="grid grid-cols-1">
  {% for subsidiary in subsidiaries %}
    <li class="mb-10">
      {% if subsidiary.title != 'Circular Ruin DSP' %}
        <div class="-mx-2 h-10">
          {% render spectrum %}
        </div>
      {% endif %}
      <div class="grid grid-cols-1 md:grid-cols-3">
        <div class="max-w-none md:pr-4">
          <h2>{{ subsidiary.title }}</h2>
          <p>{{ subsidiary.dates }}</p>
          {{ subsidiary.content | markdown }}
        </div>
        <div class="md:col-span-2">
          <a href="{{ subsidiary.image }}">
            <img src="{{ subsidiary.image }}" alt="{{ subsidiary.title }}" class="!mb-0 h-auto w-full">
          </a>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
<ul class="mb-10">
  {% for resource in resources %}
    <li class="mb-5">
      <h2>{{- resource.title -}}</h2>
      <p>{{ resource.description }}</p>
      <div class="flex">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-20 text-yellow-300"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 8.25H7.5a2.25 2.25 0 0 0-2.25 2.25v9a2.25 2.25 0 0 0 2.25 2.25h9a2.25 2.25 0 0 0 2.25-2.25v-9a2.25 2.25 0 0 0-2.25-2.25H15M9 12l3 3m0 0 3-3m-3 3V2.25" />
        </svg>
        <a
          href="{{ resource.url }}"
          target="_blank"
          class="group h-fit w-full border-2 border-solid border-transparent bg-yellow-300 p-5 text-center font-mono text-xl hover:border-yellow-300"
        >
          <span class="px-2 !text-black group-hover:bg-black group-hover:!text-yellow-300">
            Download&nbsp;
            {{- resource.title -}}
            &nbsp;(
            {{- resource.size -}}
            )
          </span>
        </a>
      </div>
    </li>
  {% endfor %}
</ul>
 {% endcomment %}

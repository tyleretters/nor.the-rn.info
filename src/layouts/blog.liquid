---
layout: base.liquid
---
<div class="grid grid-cols-1 gap-1 border-y-4 border-solid border-black text-black md:grid-cols-2 xl:grid-cols-4 ">
  {% for group in collections.postsByYear %}
    <div
      class=""
    >
      <h2 class="border-b-4 border-solid border-black bg-white p-2 text-4xl font-bold">
        {{ group.year }}
      </h2>
      <ul class="grid list-none grid-cols-1 gap-1">
        {% for post in group.posts %}
          <li>
            <a
              href="{{ post.url }}"
              class="block bg-white p-2 hover:bg-red-500 hover:text-white hover:underline"
            >
              <span class="font-mono text-sm">{{ post.data.date | date: '%B %d, %Y' }}</span>
              <br>
              <span class="font-semibold">{{ post.data.title }}</span>
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
  {% endfor %}
</div>

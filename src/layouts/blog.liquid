---
layout: base.liquid
---
<div class="grid grid-cols-1 gap-1 md:grid-cols-2 xl:grid-cols-4 border-y-2 border-solid border-[black] text-stone-950 ">
  {% for group in collections.postsByYear %}
    <div
      class="border-t-2 border-solid border-[black]"
    >
      <h2 class="border-b-2 border-solid border-[black] bg-stone-50 p-2 text-4xl font-bold">
        {{ group.year }}
      </h2>
      <ul class="list-none">
        {% for post in group.posts %}
          <li>
            <a
              href="{{ post.url }}"
              class="block border-y-2 border-solid border-[black] bg-stone-50 p-2 hover:bg-red-500 hover:text-stone-50 hover:underline"
            >
              <span class="font-mono text-sm">{{ post.data.date | date: '%B %d, %Y' }}</span>
              <br>
              <span class="font-semibold">{{ post.data.title }}</span>
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
  {% endfor %}
</div>
